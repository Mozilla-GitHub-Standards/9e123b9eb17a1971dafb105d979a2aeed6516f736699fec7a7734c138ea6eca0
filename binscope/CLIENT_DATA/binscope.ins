[Initial]
Message=BinScope Installation
StayOnTop=false

[Aktionen]
Winbatch_install_binscope

if not( FileExists("%ProgramFilesDir%\Microsoft\SDL BinScope\BinScope.exe") )
    logError "Fatal: After installation BinScope.exe doesn't exist"
    isFatalError
endif

[Winbatch_install_binscope]
; This package won't install through the SYSTEM account without ALLUSERS=1 being
; set.
msiexec /i %SCRIPTPATH%\BinScopeSetup.msi /passive ALLUSERS=1
