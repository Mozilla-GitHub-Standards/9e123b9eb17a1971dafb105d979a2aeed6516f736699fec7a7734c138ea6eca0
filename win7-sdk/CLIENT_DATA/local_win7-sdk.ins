[Initial]
Message=Windows 7 SDK Installation
StayOnTop=false

[Aktionen]
Winbatch_install_win7_sdk
Winbatch_install_hotfix
if not(FileExists("d:\sdks\v7.0"))
    logError "Fatal: After installation, d:\sdks\v7.0 not found"
    isFatalError
endif
ExitWindows /ImmediateReboot

[Winbatch_install_win7_sdk]
autoit3.exe %SCRIPTPATH%\win7-sdk.au3 %SCRIPTPATH%\Win7SDK\Setup.exe

[Winbatch_install_hotfix]
msiexec /p %SCRIPTPATH%\VS80sp1-KB949009-x86.msp /passive
